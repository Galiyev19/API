# Используем официальный образ Golang в качестве базового образа
FROM golang:1.20.1-alpine

# Установка рабочей директории внутри контейнера
WORKDIR /API

# Копирование файлов исходного кода из текущей директории хоста внутрь контейнера
COPY . .

# Сборка приложения
RUN go build -o API ./cmd/app/main.go

# Указываем команду, которая будет запущена при запуске контейнера
CMD ["./API"]
